{% extends "base.html.twig" %}

{% block title %}
    Administração
{% endblock %}

{% block body %}

    <div class="container">
        <section class="contato-formulario" aria-label="Formulário">
            <form class="form" action="{{ bicicleta is defined ? path('app_bicicleta_editar', {'bicicleta': bicicleta.id}) : path('app_bicicleta_adicionar') }}" method="POST">
                <div>
                    <label for="nome">Nome</label>
                    <input type="text" id="nome" name="nome" placeholder="Seu nome" value="{{ bicicleta is defined ? bicicleta.nome : "" }}">
                </div>
                <div>
                    <label for="preco">Preco</label>
                    <input type="number" id="preco" name="preco" placeholder="9999" value="{{ bicicleta is defined ? bicicleta.preco : "" }}">
                </div>
                <div class="col-2">
                    <label for="descricao">Descricao</label>
                    <input type="text" id="descricao" name="descricao" placeholder="Muito bom!" value="{{ bicicleta.nome is defined ? bicicleta.descricao : ""}}">
                </div>
                <button class="botao col-2">{{ bicicleta.nome is defined ? "Editar" : "Cadastrar"}}</button>
            </form>
        </section>
    </div>

{% endblock %}